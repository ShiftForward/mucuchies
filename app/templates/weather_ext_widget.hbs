<h1 class="title">Weather</h1>
{{#if content}}
<span class="widget-weather-temperature">{{content.today.temperature}}</span>
<span> </span>
<span class="widget-weather-code widget-weather-code" {{bindAttr class="todayCodeClass"}}></span>
<br>
<div class="widget-weather-nextdays-container">
  <div class="widget-weather-nextdays-box">
    <div class="widget-weather-nextdays-box-wrap">
      <div class="widget-weather-nextdays-date">{{content.tomorrow.title}}</div>
      <div class="widget-weather-nextdays-icon widget-weather-code" {{bindAttr class="tomorrowCodeClass"}}></div>
    </div>
  </div>
  <div class="widget-weather-nextdays-box">
    <div class="widget-weather-nextdays-box-wrap">
      <div class="widget-weather-nextdays-date">{{content.aftertomorrow.title}}</div>
      <div class="widget-weather-nextdays-icon widget-weather-code" {{bindAttr class="aftertomorrowCodeClass"}}></div>
    </div>
  </div>
</div>
<h4 class="widget-weather-location">{{content.today.city}}</h4>
{{/if}}
{{view Dashboard.LastUpdatedView}}